<ns1:topology xmlns:ns1="http://www.i2group.com/Schemas/2013-11-18/Topology">

  <i2-data-sources>
    <i2-data-source ar="true" default="true" id="ar-id">
      <!-- DataSource Id is deliberately blank and should be left so -->
      <DataSource Version="0" Id="">
        <Shape>Repository</Shape>
        <Name>Ar</Name>
      </DataSource>
    </i2-data-source>
    <i2-data-source ar="false" default="false" id="infostore">
      <!-- DataSource Id is deliberately blank and should be left so -->
      <DataSource Version="0" Id="">
        <Shape>InfoStore</Shape>
        <Name>InfoStore</Name>
      </DataSource>
    </i2-data-source>
  </i2-data-sources>
  <databases>
    <!-- The instance-name must be set according to your DB2 configuration.
         For example, this defaults to DB2 on Windows and db2inst1 on Linux. -->
    <database max-pool-size="5" database-type="WriteStore" dialect="db2" instance-name="DB2" database-name="WriteSto" xa="true" id="write1" host-name="localhost" port-number="50000"/>
    <database database-type="InfoStore" dialect="db2" database-name="ISTORE" instance-name="DB2" edition="" xa="false" host-name="localhost" id="infostore" port-number="50000" version=""/>
  </databases>
  <applications>
    <application http-server-host="true" name="i2analyze" host-name="localhost">
      <lucene-indexes>
        <lucene-index main-index-location="C:/IBM/i2analyze/data-dev/ar/main_index" id="ar" alternatives-location="C:/IBM/i2analyze/data-dev/ar/alternatives"/>
      </lucene-indexes>
      <wars>
        <war context-root="apollo" name="core" i2-data-source-id="ar-id" target="core">
          <data-sources>
            <data-source database-id="write1" create-database="true"/>
          </data-sources>
          <lucene-index-ids>
            <lucene-index-id value="ar"/>
          </lucene-index-ids>
          <fragments>
            <fragment name="common"/>
            <fragment name="core"/>
          </fragments>
        </war>
      </wars>
    </application>
    <application http-server-host="false" name="awc" host-name="localhost">
      <wars>
        <war context-root="awc" name="awc" i2-data-source-id="infostore" target="awc">
          <data-sources>
            <data-source database-id="infostore" create-database="true"/>
          </data-sources>
          <file-store-ids>
            <file-store-id value="awc-job-store"/>
            <file-store-id value="awc-recordgroup-store"/>
          </file-store-ids>
          <fragments>
            <fragment name="awc"/>
            <fragment name="common"/>
            <fragment name="default-user-profile-provider"/>
          </fragments>
          <solr-collection-ids>
            <solr-collection-id collection-id="main_index" data-dir="C:/IBM/i2analyze/data-dev/solr" cluster-id="is_cluster"/>
          </solr-collection-ids>
        </war>
      </wars>
      <file-stores>
        <file-store location="C:/IBM/i2analyze/data-dev/job/main" id="awc-job-store" type="job-store"/>
        <file-store location="C:/IBM/i2analyze/data-dev/recordgroup/main" id="awc-recordgroup-store" type="recordgroup-store"/>
      </file-stores>
    </application>
  </applications>
  <zookeepers>
    <zookeeper id="zoo">
      <zkhosts>
        <zkhost data-dir="C:/IBM/i2analyze/data-dev/zookeeper" host-name="localhost" id="1" port-number="9983"/>
      </zkhosts>
    </zookeeper>
  </zookeepers>
  <solr-clusters>
    <solr-cluster id="is_cluster" zookeeper-id="zoo">
      <solr-collections>
        <solr-collection id="main_index" max-shards-per-node="4" num-shards="4"/>
      </solr-collections>
      <solr-nodes>
        <solr-node memory="2g" data-dir="C:/IBM/i2analyze/data-dev/solr" host-name="localhost" id="node1" port-number="8983"/>
      </solr-nodes>
    </solr-cluster>
  </solr-clusters>
</ns1:topology>